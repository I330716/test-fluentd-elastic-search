apiVersion: v1
data:
  forward.input.conf: |-
    # Takes the messages sent over TCP
    <source>
      @type forward
      port 24224
      bind 0.0.0.0
    </source>
  output.conf: |-
    # Enriches records with Kubernetes metadata
    <filter kubernetes.**>
      @type kubernetes_metadata
    </filter>

    # Remove unneeded fields
    <filter kubernetes.**>
      @type record_transformer
      remove_keys $.kubernetes.master_url,$.kubernetes.namespace_id
    </filter>

    <match kubernetes.**>
      @type rewrite_tag_filter
      <rule>
        key $.kubernetes.namespace_labels.garden_sapcloud_io/role
        pattern ^shoot$
        tag shoot.${tag}
      </rule>
      <rule>
        key $.kubernetes.namespace_labels.garden_sapcloud_io/role
        pattern ^shoot$
        invert true
        tag non-shoot.${tag}
      </rule>
    </match>

    <match shoot.kubernetes.**>
      @id elasticsearch_dynamic
      @type elasticsearch_dynamic
      @log_level info
      include_tag_key true
      host elasticsearch-logging.${record['kubernetes']['namespace_name']}.svc
      port 9200
      logstash_format true
      <buffer>
        @type file
        path /gardener/flentd-buffers/kubernetes.shoot.buffer
        flush_mode interval
        retry_type exponential_backoff
        flush_thread_count 2
        flush_interval 5s
        retry_max_times 30 
        retry_max_interval 30
        chunk_limit_size 2M
        queue_limit_length 8
        overflow_action block
        retry_secondary_threshold 1 
      </buffer>
      <secondary>
        @id elasticsearch_dynamic_secondary
        @type elasticsearch_dynamic
        include_tag_key true
        host elasticsearch-logging.garden.svc
        port 9200
        logstash_format true
        logstash_prefix ${record['kubernetes']['namespace_name']}
        buffer_type file
        buffer_path /gardener/flentd-buffers/kubernetes.secondary.buffer
        flush_mode interval
        retry_type exponential_backoff
        flush_thread_count 2
        flush_interval 5s
        retry_max_interval 30
        chunk_limit_size 2M
        queue_limit_length 8
      </secondary> 
    </match>

    <match **>
      @id elasticsearch
      @type elasticsearch
      @log_level info
      include_tag_key true
      host elasticsearch-logging.garden.svc
      port 9200
      logstash_format true
      <buffer>
        @type file
        path /gardener/flentd-buffers/kubernetes.garden.buffer
        flush_mode interval
        retry_type exponential_backoff
        flush_thread_count 2
        flush_interval 5s
        retry_forever
        retry_max_interval 30
        chunk_limit_size 2M
        queue_limit_length 8
        overflow_action block
      </buffer>
    </match>
  system.conf: |-
    <system>
      root_dir /gardener/flentd-buffers/
    </system>
kind: ConfigMap
metadata:
  labels:
    app: fluentd-es
    role: logging
  name: fluentd-es-config
  namespace: garden
